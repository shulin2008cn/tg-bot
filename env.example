# Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# 允许的群组ID列表 (用逗号分隔，可选)
ALLOWED_GROUP_IDS=-1001234567890,-1001234567891

# 管理员用户ID列表 (用逗号分隔，可选)
ADMIN_USER_IDS=123456789,987654321

# 服务器配置
PORT=3000
NODE_ENV=development

# 商品搜索API配置 (可选)
PRODUCT_API_KEY=your_api_key_here
PRODUCT_API_URL=https://api.example.com

# 代理配置 (如果在中国大陆需要代理访问Telegram)
PROXY_ENABLED=false
PROXY_HOST=localhost
PROXY_PORT=7890

# 推送服务配置
PUSH_ENABLED=true
DAILY_PUSH_TIME=09:00
WEEKLY_REPORT_TIME=10:00

# 商品卡片配置
BRAND_NAME=UUFinds
WHATSAPP_NUMBER=your_whatsapp_number
DISCORD_INVITE=your_discord
BOT_USERNAME=findsRepsBot
MULEBUY_BASE_URL=https://mulebuy.com